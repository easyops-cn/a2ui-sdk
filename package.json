{
  "name": "a2ui-sdk",
  "private": true,
  "description": "SDK for integrating with A2UI protocol",
  "homepage": "https://github.com/easyops-cn/a2ui-sdk",
  "repository": {
    "type": "git",
    "url": "git@github.com:easyops-cn/a2ui-sdk.git"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:run -w packages/utils && npm run test:run -w packages/react",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "website",
    "playground",
    "packages/*"
  ]
}
